# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
indent_style = space
insert_final_newline = true